<!doctype html>

<html>
  <head>
    <title>J-CMS</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/cms_application.css">
  </head>
  <body>
    <header>
      <% if session[:error] %>
        <p class="error"><%= session.delete(:error) %></p>
      <% end %>
      <% if session[:success] %>
        <p class="success"><%= session.delete(:success) %></p>
      <% end %>
    </header>
    <main>
      <%== yield %>
    </main>
  </body>
</html>
